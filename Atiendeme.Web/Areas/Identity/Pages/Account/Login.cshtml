@page
@model LoginModel

<section class="home-banner-area relative" id="home" data-parallax="scroll" data-image-src="/assets/images/odontologia.jpg">
    <div class="overlay-bg overlay"></div>
    <h1 class="template-name">ATIENDEME</h1>
    <div class="container">
        <div class="row fullscreen">
            <div class="banner-login-content col-lg-12 ">

                <div class="row p-5 bg-gra-01">

                    <div class="col-md-6 d-none d-md-block">
                        <img src="~/assets/images/dentista-nina.jpg" class="img-thumbnail" />
                    </div>

                    <div class="col-md-6 m-auto">
                        <section>
                            <form id="account" method="post">
                                <h4 class="text-white">Iniciar Sesion.</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Input.Email">Correo</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password">Contraseña</label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            Recuerdame
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info">Log in</button>
                                </div>
                                <div class="form-group">
                                    <p class="text-white normal-p-size">
                                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                                    </p>
                                    <p class="text-white normal-p-size">
                                        ¿No tienes cuenta?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¡Crea Una!</a>
                                    </p>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}